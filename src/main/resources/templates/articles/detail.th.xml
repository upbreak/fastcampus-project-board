<?xml version="1.0" ?>
<thlogic>
    <attr sel="#header" th:replace="header :: header"></attr>
    <attr sel="#footer" th:replace="footer :: footer"></attr>

    <attr sel="#article-main" th:object="${article}">
        <attr sel="#article-header/h1" th:text="*{title}"/>
        <attr sel="#nickname" th:text="*{nickname}"/>
        <attr sel="#email" th:text="*{email}"/>
        <attr sel="#create-at" th:text="*{#temporals.format(createAt, 'yyyy-MM-dd')}" th:datetime="*{createAt}" />
        <attr sel="#hashtag" th:text="*{hashtag}"/>
        <attr sel="#article-content/pre" th:text="*{content}"/>
    </attr>

    <attr sel="#article-comments" th:remove="all-but-first">
        <attr sel="li[0]" th:each="articleComment : ${articleComments}">
            <attr sel="div/small/time" th:datetime="${articleComment.createAt}" th:text="${#temporals.format(articleComment.createAt, 'yyyy-MM-dd')}"/>
            <attr sel="div/strong" th:text="${articleComment.nickname}"/>
            <attr sel="div/p" th:text="${articleComment.content}"/>
        </attr>
    </attr>
</thlogic>