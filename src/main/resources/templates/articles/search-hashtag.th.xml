<?xml version="1.0" ?>
<thlogic>
    <attr sel="#header" th:replace="header :: header"></attr>
    <attr sel="#footer" th:replace="footer :: footer"></attr>

    <attr sel="main" th:object="${articles}">
        <attr sel="#hashtags" th:remove="all-but-first">
            <attr sel="div" th:each="hashtag : ${hashtags}">
                <attr sel="a"
                      th:class="text-reset"
                      th:text="${hashtag}"
                      th:href="@{/articles/search-hashtag(
                        page=${param.page}
                        , sort=${param.sort}
                        , searchType=${searchType.name}
                        , searchValue=${hashtag}
                      )}"
                />
            </attr>
        </attr>

        <attr sel="#article-table">
            <attr sel="thead/tr">
                <attr sel="th.title/a"
                      th:text="제목"
                      th:href="@{/articles/search-hashtag(
                          page = ${articles.number}
                          , sort = 'title' + (*{sort.getOrderFor('title')} != null ? (*{sort.getOrderFor('title').direction.name} != 'DESC' ? ',desc' : '') : '')
                          , searchType = ${searchType.name}
                          , searchValue = ${param.searchValue}
                      )}
                "/>
            </attr>
        </attr>

        <attr sel="#article-table">
            <attr sel="tbody" th:remove="all-but-first">
                <attr sel="tr[0]" th:each="article : ${articles}">
                    <attr sel="td.title/a" th:text="${article.title}" th:href="@{'/articles/' + ${article.id}}" />
                    <attr sel="td.content/span" th:text="${article.content}"/>
                    <attr sel="td.user-id" th:text="${article.nickname}"/>
                    <attr sel="td.create-at/time" th:datetime="${article.createAt}" th:text="${#temporals.format(article.createAt, 'yyyy-MM-dd')}" />
                </attr>
            </attr>
        </attr>

        <attr sel="#pagination">
            <attr sel="li[0]/a"
                  th:text="Pre"
                  th:href="@{/articles/search-hashtag(page=${articles.number - 1}, searchType = ${searchType.name}, searchValue = ${param.searchValue})}"
                  th:class="'page-link' + (${articles.number} <= 0 ? ' disabled' : '')"
            />
            <attr sel="li[1]" th:class="page-item" th:each="pageNum : ${paginationBarNumbers}">
                <attr sel="a"
                      th:text="${pageNum + 1}"
                      th:href="@{/articles/search-hashtag(page = ${pageNum}, searchType = ${searchType.name}, searchValue = ${param.searchValue})}"
                      th:class="'page-link' + (${pageNum} == ${articles.number} ? ' disabled' : '')"
                />
            </attr>
            <attr sel="li[2]/a"
                  th:text="Next"
                  th:href="@{/articles/search-hashtag(page = ${articles.number + 1}, searchType = ${searchType.name}, searchValue = ${param.searchValue})}"
                  th:class="'page-link' + (${articles.number} >= ${articles.totalPages -1} ? ' disabled' : '')"
            />
        </attr>
    </attr>
</thlogic>